{
    "name": "aon4o/whmcs-helpers",
    "description": "A collection of WHMCS specific helpers.",
    "keywords": [
        "aon4o",
        "whmcs-helpers",
        "whmcs",
        "helpers",
        "whmcs-module"
    ],
    "homepage": "https://github.com/aon4o/whmcs-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Naida",
            "email": "a.o.naidenov@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "psy/psysh": "^0.12.10"
    },
    "require-dev": {
        "pestphp/pest": "^2.36",
        "laravel/pint": "^1.20",
        "whmcs/developer-docs": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Aon4o\\WhmcsHelpers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "bin": [
        "bin/whmcs-shell"
    ],
    "scripts": {
        "test": "vendor/bin/pest",
        "test:unit": "@test --testsuite=Unit",
        "test:feat": "@test --testsuite=Feature",
        "test:arch": "@test --testsuite=Architecture",
        "lint": "vendor/bin/pint",
        "lint:test": "@lint --test",
        "format": "vendor/bin/rector",
        "format:test": "@format --dry-run"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "whmcs/developer-docs",
                "version": "dev-main",
                "source": {
                    "type": "git",
                    "url": "https://github.com/WHMCS/developer-docs.git",
                    "reference": "master"
                }
            }
        }
    ]
}
